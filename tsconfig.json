{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "source",
		"baseUrl": "./",
		"paths": {
			"@services/*": ["source/services/*"],
			"@utils/*": ["source/utils/*"]
		}
	},
	"include": ["source/**/*"],
	"exclude": ["node_modules"]
}
