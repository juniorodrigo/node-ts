{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["src/*"],
			"@ops/*": ["src/services/ops/*"],
			"@prisma/zod": ["prisma/generated/zod/index.ts"]
		},
		"baseUrl": ".",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"rootDir": ".",

		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*", "prisma/generated/**/*"],
	"exclude": ["packages/**/*", "node_modules", "dist", "logs", "prisma.config.ts"]
}
