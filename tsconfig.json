{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["source/*"],
			"@ops/*": ["source/services/ops/*"]
		},
		"baseUrl": ".",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"rootDir": "./source",
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"exclude": ["packages/**/*", "node_modules", "dist", "logs"]
}
