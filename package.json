{
	"name": "nodets-app",
	"description": "Scaffold de Node+Express+TS a partir de mi repositorio base",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc && tsc-alias",
		"start": "node dist/index.js",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint . --ext .ts,.js --fix",
		"test": "jest",
		"typecheck": "tsc --noEmit",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev --name test-migration",
		"prisma:studio": "prisma studio",
		"format": "prettier --write \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\"",
		"format:check": "prettier --check \"src/**/*.{ts,js}\" \"test/**/*.{ts,js}\"",
		"check": "pnpm run typecheck && pnpm run lint && pnpm run format:check",
		"commitlint": "commitlint --from=HEAD~1 --to=HEAD",
		"prepare": "husky install"
	},
	"dependencies": {
		"@prisma/client": "^6.13.0",
		"body-parser": "^1.20.3",
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"express-async-errors": "^3.1.1",
		"express-rate-limit": "^8.0.1",
		"helmet": "^8.1.0",
		"pino": "^9.8.0",
		"pino-pretty": "^13.1.1",
		"prisma": "^6.13.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"zod": "^3.24.3",
		"zod-prisma-types": "^3.2.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@eslint/js": "^9.9.0",
		"@types/body-parser": "^1.19.5",
		"@types/compression": "^1.8.1",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.0",
		"@types/node": "^20.11.17",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"@typescript-eslint/eslint-plugin": "^8.39.1",
		"@typescript-eslint/parser": "^8.39.1",
		"cpx": "^1.5.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "3",
		"eslint-plugin-import": "^2.32.0",
		"husky": "^9.1.7",
		"prettier": "^3.6.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3"
	},
	"packageManager": "pnpm@9.11.0+sha512.0a203ffaed5a3f63242cd064c8fb5892366c103e328079318f78062f24ea8c9d50bc6a47aa3567cabefd824d170e78fa2745ed1f16b132e16436146b7688f19b"
}
